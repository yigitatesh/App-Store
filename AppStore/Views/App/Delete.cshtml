@model App

<form method="post" asp-action="Delete">
    <!-- this hidden input sends id of app object to DeletePOST function -->
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete App</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <input asp-for="Category" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="">Delete</button>
        <a asp-controller="App" asp-action="Index" class="btn btn-secondary">
            Back to List
        </a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
